<div class="grid_12">
	
<h2>Edit Link</h2>

<%= form_tag idea_branch_link_path(@idea, @branch.alias, @link), :method => :put do %>

	<%= text_area_tag "link[url]", @link.url, {:class => "input_box input_link"} %>
	
	<%= text_area_tag "link[notes]", @link.notes.nil? ? "Notes (optional)" : @link.notes, :class => 'input_box input_text' %><br />
			
	<%= submit_tag 'Save link' %><br /><br />
	
<% end %>

<%= button_to "Delete Link", idea_branch_link_path(@idea, @branch.alias, @link), :confirm => "Are you sure you want to delete this link?", :method => :delete %>

</div>
<div class="clear"></div>