<div class="idea_item item_link">
	<div class="grid_8 alpha">
		<div class="idea_item_icon_container">
			<% if edit %>
				<%= render :partial => "ideas/editbox", :locals => {:idea_id => @idea.id, 
																														:item_id => link.id, 
																														:item_type => "link",
																														:edit_path => edit_link_branch_or_master_path(@idea, @branch, link),
																														:drag => true,
																														:color => 4} %>
			<% end %>
		</div>
		<div class="idea_item_main">
			<% if link.file_extension == ".jpg" || link.file_extension == ".gif" || link.file_extension == ".png" %>
				<%= image_tag link.url %>
			<% else %>
				<%= link_to link.url, link.url, :target => "_blank" %>
			<% end %>
		</div>
		<div class="clear"></div>
	</div>
	<div class="grid_1 omega">
		
	</div>
	<div class="clear"></div>
</div>