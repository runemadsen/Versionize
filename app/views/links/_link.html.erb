<div class="idea_item item_link">
	<div class="idea_item_icon_container">
		<div class="idea_item_icon background_color1">&nbsp;</div>
	</div>
	<div class="idea_item_main">
<% if link.file_extension == ".jpg" || link.file_extension == ".gif" || link.file_extension == ".png" %>
	<%= image_tag link.url %>
	<% if edit %>
		<div class="edit_item">
			<%= image_tag "draggable.jpg", :class => "drag_item", :"data-idea" => @idea.id, :"data-item" => link.id, :"data-item-type" => "link" %>
			<%= link_to "Delete", idea_link_path(@idea, link.id), :method => :delete, :confirm => "Are you sure you want to delete this image?", :class => "destroy" %>
		</div>
	<% end  %>
<% else %>
	<%= link_to link.url, link.url %>
	<% if edit %>
		<div class="edit_item">
			<%= image_tag "draggable.jpg", :class => "drag_item", :"data-idea" => @idea.id, :"data-item" => link.id, :"data-item-type" => "link" %>
			<%= link_to "Edit", edit_idea_link_path(@idea, link.id) %>
			<%= link_to "Delete", idea_link_path(@idea, link.id), :method => :delete, :confirm => "Are you sure you want to delete this link?", :class => "destroy" %>
		</div>
	<% end %>
<% end %>
	</div>
	<div class="clear"></div>
</div>