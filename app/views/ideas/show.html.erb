<div class="grid_12">
	<h1><%= @idea.name %></h1>
</div>
<div class="clear"></div>

<div class="grid_12 dotted_line_small"></div>
<div class="grid_9">
	
	<% @tree.each_with_index do |file, i | %>
		<% if i == 0 %>
			<%= render :partial => "texts/description", :locals => {:text => file, :edit => @edit} %>
			<%= render(:partial => "ideas/mediabox", :locals => {:idea => @idea, :branch => @branch}) if @edit %>
		<% else %>
			<%= render :partial => file.partial_name, :locals => { file.symbol_name => file, :edit => @edit} %>
		<% end %>
	<% end %>
	
</div>
<div class="grid_3" id="sidebar">
	
	<h2>Versions</h2>
	<ul id="versions">
		<% @idea.branches.each_with_index do |branch, i| %>
			<% if @branch.id == branch.id %>
				<li><strong><%= link_to branch.name, branch_or_idea_path(@idea, branch), :class => "font_color5" %></strong></li>
			<% else %>
				<li><%= link_to branch.name, branch_or_idea_path(@idea, branch), :class => "font_color3" %></li>
			<% end %>
		<% end %>
		<% if @edit %>
		<li><%= link_to "+ Create new version", new_idea_branch_path(@idea), :id => "new_version" %></li>
		<% end %>
	</ul>
			
	<h2>History</h2>
	<ul id="history">
	<% @idea.commits(@branch).each_with_index do |commit, i| %>
		<% c = (i % 9) + 1 %>
		<li><span class="history_date background_color<%= c %>"><%= commit.date.strftime("%m/%d/%Y") %></span> <%= link_to commit.message, i == 0 ? branch_or_idea_path(@idea, @branch) : idea_branch_version_path(@idea, @branch.alias, commit.sha), :class => "font_color#{c}" %></li>
	<% end %>
	<% unless @branch.parent.nil? %>
		This branch came from <%= @branch.parent.name %>
	<% end %>
	</ul>
	
	<h2>Settings</h2>
	
	<% if @edit %>
	<div id="access_control" data-idea-id="<%= @idea.id %>">
		<div class="access_box <% if @idea.private? %>active<% end %>" id="access0">
			<% if @idea.public? %><a href="#">Private</a><% else %>Private<% end %>
		</div>	
		<div class="access_box <% if @idea.public? %>active<% end %>" id="access1">
			<% if @idea.private? %><a href="#">Public</a><% else %>Public<% end %>
		</div>
		<div class="clear"></div>
	</div>
	<% end %>
	
	<% if @edit %>
	<%= link_to (@idea.collaborations.count > 1 ? "Edit collaborators" : "Add collaborators to idea"), idea_collaborations_path(@idea), :class => "sidebar_link background_color3" %>
	<% end %>
	
		<div id="drop_box">
			<div id="placeholder">Drop Idea Items Here</div>
		</div>
		
		<%= link_to("Delete idea", idea_path(@idea), :method => :delete, :confirm => "Are you sure you want to delete the idea? This will delete all branches!", :class => "sidebar_link font_color1") if @idea.is_owner? @current_user %>
	
</div>
<div class="clear"></div>
	
	
