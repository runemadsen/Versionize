<div class="grid_8">
	
	<h1><%= @idea.name %></h1>
	
	<% @idea.current_version.each_with_index do |content, i| %>
		<% if i == 0 %>
			<%= render :partial => "texts/description", :locals => {:text => content} %>
			<div id="media_box">
				<ul>
					<li><%= link_to "Insert Link", new_idea_link_path(@idea)%></li>
					<li><%= link_to "Insert Text", new_idea_text_path(@idea)%></li>
					<li><%= link_to "Upload Image", new_idea_image_path(@idea) %></li>
				</ul>
				<div class="clear"></div>
			</div>
		<% else %>
			<%= render content %>
		<% end %>
	<% end %>
	
</div>
<div class="grid_4">
	
	<p>Versions: <%= @idea.num_commits %></p>
</div>
<dic class="clear"></div>