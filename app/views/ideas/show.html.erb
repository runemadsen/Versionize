<div class="grid_9">
	<h1><%= @idea.name %></h1>
	
</div>
<div class="grid_3">
		&nbsp;
</div>

<div class="clear"></div>
<div class="grid_12 dotted_line_small"></div>
<div class="grid_9">

	<% @idea.version(@version, @branch).each_with_index do |content, i| %>
		
		<% if i == 0 %>
			<%= render :partial => "texts/description", :locals => {:text => content, :edit => @edit} %>
			<% if @edit %>
			<div id="media_box">
				<ul>
					<li id="text"><%= link_to "Text", new_text_branch_or_master_path(@idea, @branch)%></li>
					<li id="image"><%= link_to "Image", new_image_branch_or_master_path(@idea, @branch) %></li>
					<li id="link"><%= link_to "Link", new_link_branch_or_master_path(@idea, @branch)%></li>
					<div class="clear"></div>
				</ul>
			</div>
			<% end %>
		<% else %>
			<%= render :partial => content.class.name.pluralize.downcase + "/" + content.class.name.downcase, 
									:locals => { content.class.name.downcase.to_sym => content, :edit => @edit} %>
		<% end %>
	<% end %>
	
</div>
<!-- <div class="grid_1">&nbsp;</div> -->
<div class="grid_3">
	
	<ul id="branch_box">
		<li>Choose branch
			<ul>
				<% @idea.repository.heads.each do |head| %>
					<li><%= link_to head.name, idea_branch_or_master_path(@idea, head.name) %></li>
				<% end %>
				<li><%= link_to "+", new_idea_branch_path(@idea) %></li>
			</ul>
		</li>
	</ul>
	<div class="clear"></div>
	
	<div id="version_box" class="sidebar_box">
			This idea has <%= pluralize(@idea.num_commits, "version") %>
	</div>
		
	<% @idea.num_commits(@branch).times do |i| %>
		<% v_num = @idea.num_commits(@branch) - i %>
		<%= link_to v_num, link_to_version(@idea, @branch, v_num), :class => "version_box background_color#{v_num % 9}" %>
	<% end %>
	<div class="clear"></div>
	
		<%= link_to (@idea.collaborations.count > 1 ? "Edit collaborators" : "Add collaborators to idea"), idea_collaborations_path(@idea), :class => "sidebar_link background_color3" %>
	
	<!-- <div id="drop_box">
			<div id="placeholder">Drop Idea Items Here</div>
		</div> -->
		
		<%#= link_to("Delete idea", idea_path(@idea), :method => :delete, :confirm => "Are you sure you want to delete the idea?", :class => "sidebar_link font_color1") if @idea.is_owner? @current_user %>
	
</div>
<div class="clear"></div>
	
	
