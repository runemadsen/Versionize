<h1>Login</h1>
	
<% form_for @user_session, :url => {:action => "create"} do |f| %>
  <%#= f.error_messages %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>

<%= link_to "Don't have an account? Create a user", :controller => :users, :action => :new %>