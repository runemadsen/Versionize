<div class="grid_12">
	
<h1>Edit Text</h1>

<%= form_tag text_branch_or_master_path(@idea, @branch, @text), :method => :put do %>

	<%= text_area_tag :body, @text.body, {:class => "input_box input_text"} %>
	<br /><br />
	<%= submit_tag 'Save text' %><br /><br />
	
<% end %>

<%= button_to "Delete Text", text_branch_or_master_path(@idea, @branch, @text), :confirm => "Are you sure you want to delete this text?", :method => :delete %>

</div>
<div class="clear"></div>