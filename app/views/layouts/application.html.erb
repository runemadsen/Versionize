<!DOCTYPE html>
<html>
<head>
  <title>Versionize</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	
	<div class="container_12">
		
		<div class="grid_12" id="header">
			<a href="/"><img src="/images/logo_beta_small.jpg"></a>
		</div>
		<div class="clear"></div>
		
		<% if flash[:notice]%>
		<div class="grid_12" id="notice">
			<%= flash[:notice] %>
		</div>
		<div class="clear"></div>
		<% end %>
		
		<% if flash[:error]%>
		<div class="grid_12" id="error">
			<%= flash[:error] %>
		</div>
		<div class="clear"></div>
		<% end %>
		
		<%= yield %>
	</div>

</body>
</html>
