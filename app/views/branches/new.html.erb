<div class="grid_12">
	<h1>Create new branch</h1>
</div>
<div class="grid_12 dotted_line_small"></div>

<div class="grid_8">	
	
<p>Choose a name for the new branch</p>
	
<%= form_tag "/ideas/#{@idea_id}/branches" do%>

<%= text_field_tag :branch_name, "Branch Name", :class => 'input_box input_name tip_field', :"data-tip-id" => "tip_name",
 	:onFocus => "if(this.value==this.defaultValue) this.value='';", 
	:onBlur => "if(this.value=='') this.value=this.defaultValue;" %>

<p><%= submit_tag 'Save basic details' %></p>

<% end %>

</div>
<div class="grid_4">
</div>
<div class="clear"></div>